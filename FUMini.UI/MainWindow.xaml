<Window x:Class="FUMini.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMini.UI"
        mc:Ignorable="d"
        Title="FUMini Hotel Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏨" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="FUMini Hotel Management System" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="UserInfoText" Text="Welcome, User" 
                               Foreground="White" FontWeight="Medium" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button x:Name="LogoutButton" Content="Logout" 
                            Background="#e74c3c" Foreground="White" 
                            BorderThickness="0" Padding="15,8"
                            FontWeight="Medium" Cursor="Hand" Click="LogoutButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#e74c3c"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c0392b"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="White" BorderBrush="#e9ecef" BorderThickness="0,0,1,0">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Navigation" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2c3e50" Margin="0,0,0,20"/>
                        
                        <!-- Admin Functions -->
                        <StackPanel x:Name="AdminPanel" Visibility="Collapsed">
                            <TextBlock Text="Admin Functions" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#7f8c8d" Margin="0,0,0,10"/>
                            
                            <Button x:Name="CustomerManagementBtn" Content="👥 Customer Management" 
                                    Style="{StaticResource NavButtonStyle}" Click="CustomerManagementBtn_Click"/>
                            
                            <Button x:Name="RoomManagementBtn" Content="🏠 Room Management" 
                                    Style="{StaticResource NavButtonStyle}" Click="RoomManagementBtn_Click"/>
                            
                            <Button x:Name="BookingManagementBtn" Content="📋 Booking Management" 
                                    Style="{StaticResource NavButtonStyle}" Click="BookingManagementBtn_Click"/>
                            
                            <Button x:Name="ReportBtn" Content="📊 Reports &amp; Statistics" 
                                    Style="{StaticResource NavButtonStyle}" Click="ReportBtn_Click"/>
                        </StackPanel>

                        <!-- Customer Functions -->
                        <StackPanel x:Name="CustomerPanel" Visibility="Collapsed">
                            <TextBlock Text="Customer Functions" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#7f8c8d" Margin="0,0,0,10"/>
                            
                            <Button x:Name="ProfileBtn" Content="👤 My Profile" 
                                    Style="{StaticResource NavButtonStyle}" Click="ProfileBtn_Click"/>
                            
                            <Button x:Name="BookingHistoryBtn" Content="📚 Booking History" 
                                    Style="{StaticResource NavButtonStyle}" Click="BookingHistoryBtn_Click"/>
                            
                            <Button x:Name="NewBookingBtn" Content="➕ New Booking" 
                                    Style="{StaticResource NavButtonStyle}" Click="NewBookingBtn_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="#f8f9fa" Padding="30">
                <ScrollViewer>
                    <StackPanel x:Name="MainContent">
                        <!-- Welcome Content -->
                        <StackPanel x:Name="WelcomeContent">
                            <TextBlock Text="Welcome to FUMini Hotel Management System" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#2c3e50" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Please select a function from the navigation menu to get started." 
                                       FontSize="16" 
                                       Foreground="#7f8c8d" 
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center"/>
                            
                            <!-- Quick Stats for Admin -->
                            <Border x:Name="AdminStatsPanel" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Padding="20" 
                                    Margin="0,30,0,0" 
                                    Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="#3498db" CornerRadius="6" Padding="15" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Total Customers" FontSize="12" Foreground="White" Opacity="0.8"/>
                                            <TextBlock x:Name="TotalCustomersText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Column="1" Background="#e74c3c" CornerRadius="6" Padding="15" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Total Rooms" FontSize="12" Foreground="White" Opacity="0.8"/>
                                            <TextBlock x:Name="TotalRoomsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Column="2" Background="#f39c12" CornerRadius="6" Padding="15" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Active Bookings" FontSize="12" Foreground="White" Opacity="0.8"/>
                                            <TextBlock x:Name="ActiveBookingsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Column="3" Background="#27ae60" CornerRadius="6" Padding="15" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Available Rooms" FontSize="12" Foreground="White" Opacity="0.8"/>
                                            <TextBlock x:Name="AvailableRoomsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>

    <!-- Styles -->
</Window>
